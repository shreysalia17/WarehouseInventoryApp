@model WarehouseMvc.Models.StockMovement
@using WarehouseMvc.Models

@{
    ViewData["Title"] = "Create Movement";
}

<h1>Create Stock Movement</h1>

<hr />
<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Item -->
            <div class="mb-3">
                <label asp-for="ItemId" class="form-label"></label>
                <select asp-for="ItemId" class="form-select" asp-items="ViewBag.ItemId">
                    <option value="">-- select an item --</option>
                </select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>

            <!-- Type (In / Out / Transfer) -->
            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<MovementType>()" id="Type">
                    <option value="">-- select movement type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <!-- Quantity -->
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- From Location (shown for OUT/TRANSFER) -->
            <div class="mb-3" data-row="from">
                <label asp-for="FromLocationId" class="form-label"></label>
                <select asp-for="FromLocationId" class="form-select" asp-items="ViewBag.FromLocationId">
                    <option value="">-- select source location --</option>
                </select>
                <span asp-validation-for="FromLocationId" class="text-danger"></span>
            </div>

            <!-- To Location (shown for IN/TRANSFER) -->
            <div class="mb-3" data-row="to">
                <label asp-for="ToLocationId" class="form-label"></label>
                <select asp-for="ToLocationId" class="form-select" asp-items="ViewBag.ToLocationId">
                    <option value="">-- select destination location --</option>
                </select>
                <span asp-validation-for="ToLocationId" class="text-danger"></span>
            </div>

            <!-- Note -->
            <div class="mb-3">
                <label asp-for="Note" class="form-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- client-side validation scripts (from default template) -->
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const typeSel = document.getElementById('Type');
            const fromRow = document.querySelector('[data-row="from"]');
            const toRow   = document.querySelector('[data-row="to"]');

            function refresh() {
                // MovementType enum: In = 1, Out = 2, Transfer = 3
                const val = typeSel.value;

                if (val === "1") {            // IN
                    if (fromRow) fromRow.style.display = 'none';
                    if (toRow)   toRow.style.display   = '';
                } else if (val === "2") {     // OUT
                    if (fromRow) fromRow.style.display = '';
                    if (toRow)   toRow.style.display   = 'none';
                } else if (val === "3") {     // TRANSFER
                    if (fromRow) fromRow.style.display = '';
                    if (toRow)   toRow.style.display   = '';
                } else {
                    // default (nothing selected): show both to guide the user
                    if (fromRow) fromRow.style.display = '';
                    if (toRow)   toRow.style.display   = '';
                }
            }

            if (typeSel) {
                typeSel.addEventListener('change', refresh);
                refresh(); // initialize visibility on load
            }
        });
    </script>
}
