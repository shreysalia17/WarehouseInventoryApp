@using WarehouseMvc.Models
@model IEnumerable<WarehouseMvc.Models.Item>

@{
    ViewData["Title"] = "Items";

    var totalItems = Model?.Count() ?? 0;
}

<div class="container mt-4">

    <!-- Header + action button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-semibold mb-1">Items</h2>
            <p class="text-muted mb-0">
                Master list of all products managed in your warehouse.
            </p>
        </div>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Add Item
        </a>
    </div>

    <!-- Quick stats -->
    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <div class="border rounded-3 p-3 bg-white">
                <div class="text-muted small text-uppercase">Total Items</div>
                <div class="h4 mb-0">@totalItems</div>
            </div>
        </div>
    </div>

    <!-- Table card -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>SKU</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model.OrderBy(i => i.Name))
                            {
                                <tr>
                                    <td>@item.Sku</td>
                                    <td>@item.Name</td>
                                    

                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary me-1">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    No items have been created yet. Click
                                    <strong>Add Item</strong> to register your first product.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
