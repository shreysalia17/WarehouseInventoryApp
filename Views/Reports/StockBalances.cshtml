@using System.Linq
@using WarehouseMvc.Models
@model IEnumerable<StockBalanceRow>

@{
    ViewData["Title"] = "Stock Balances";

    var list = Model?.ToList() ?? new List<StockBalanceRow>();

    var totalItems = list.Select(m => m.ItemName).Distinct().Count();
    var totalLocations = list.Select(m => m.LocationName).Distinct().Count();
    var totalQuantity = list.Sum(m => m.Quantity);
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-semibold mb-1">Stock Balances</h2>
            <p class="text-muted mb-0">
                Current quantity of each item at every warehouse location.
            </p>
        </div>
    </div>

    <!-- Stats row -->
    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <div class="border rounded-3 p-3 bg-white">
                <div class="text-muted small text-uppercase">Distinct Items</div>
                <div class="h4 mb-0">@totalItems</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border rounded-3 p-3 bg-white">
                <div class="text-muted small text-uppercase">Locations</div>
                <div class="h4 mb-0">@totalLocations</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border rounded-3 p-3 bg-white">
                <div class="text-muted small text-uppercase">Total Units on Hand</div>
                <div class="h4 mb-0">@totalQuantity</div>
            </div>
        </div>
    </div>

    <!-- Table card -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Item</th>
                            <th>Location</th>
                            <th class="text-end">Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (list.Any())
                        {
                            foreach (var row in list
                            .OrderBy(r => r.ItemName)
                            .ThenBy(r => r.LocationName))
                            {
                                <tr>
                                    <td>@row.ItemName</td>
                                    <td>@row.LocationName</td>
                                    <td class="text-end fw-semibold">@row.Quantity</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    No stock balance data is available yet.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
